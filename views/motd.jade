doctype html
html
  head
    title Motd Changer
    script(src='//fast.eager.io/4d631U5YZd.js')
    script#insertjshere(src='includes.js')
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/bootstrap-theme.min.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='javascripts/bootstrap.min.js')
    script.
      $(document).ready(function(){
      var motd;
      $("#submit").click(function(){
      motd=$("#motd").val();
      $.post("motd.html",{motd:motd},function(data){
      if(data=='done')
      {
      window.location.href="motd.html";
      } else {
      alert("Error!");
      }
      });
      });
      });
  body
    main.container

      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            a.navbar-brand(href='/') Home
          div.nav-collapse.collapse
            ul.nav.navbar-nav
              li.active
                a(href='motd.html') MOTD changer
              li
                a(href='reserved.html') RESERVED
              li
                a(href='reserved.html') RESERVED 
      h2 Change MOTD
      form#motd-form(role='form')
        .form-group
          label.control-form(for='motd') MOTD:
          textarea#motd.form-control(form='motd-form', placeholder='Enter MOTD')
        button#submit.btn.btn-default(type='submit') Submit
