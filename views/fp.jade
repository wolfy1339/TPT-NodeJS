    script.
      $(document).ready(function(){
      var fp;
      $("#submit").click(function(){
      fp=$("#fp").val();
      $.post("/fp.html",{fp:fp},function(data){
      if(data=='done')
      {
      window.location.href="/motd.html";
      } else {
      alert("Error!");
      }
      });
      });
      });

body
    main.container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            a.navbar-brand(href='/') Home
          div
            ul.nav.navbar-nav
              li
                a(href='motd.html') MOTD changer
              li.active
                a(href='fp.html') FP changer
              li
                a(href='reserved.html') RESERVED 
      form#fp-form(role='form')
        .form-group
          label.control-label(for='fp') FrontPage JSON:
          textarea#fp.form-control(form='fp-form', placeholder='Enter JSON here.')
