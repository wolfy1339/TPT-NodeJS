html
  head
    title Login
    script(src='//fast.eager.io/4d631U5YZd.js')
    script#insertjshere(src='includes.js')
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/bootstrap-theme.min.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='javascripts/bootstrap.min.js')
  body
    main.container
      nav.navbar.navbar-default
        .container-fluid
           .navbar-header
            a.navbar-brand(href='index.html') Home
      script.
        $(document).ready(function(){
        var pass;
        $("#submit").click(function(){
        pass=$("#pass").val();
        $.post("login.html",{pass:pass},function(data){
        if(data=='done')
        {
        window.location.href="index.html";
        } else {
        alert("Username or password invalid!");
        }
        });
        });
        });

      h2 Login
      form(role='form')
        .form-group
          label.control-label(for='pass') Password:
          input#pass.form-control(type='password', placeholder='Enter password')
        button#submit.btn.btn-default(type='submit') Submit
